		['FnF Android Team'],
		['LuckyDog', 'luckydog', 'Original FnF Android Creator', 'https://youtube.com/channel/UCeHXKGpDKo2eqYKVkqCUdaA', 0xFFD700],
		['ZacksGamerz', 'zack', 'v.0.2.8 Coder', 'https://youtube.com/channel/UCbWNOpUvvruwi3pbYVC_yWQ', 0x008000],
		['Theo Engine Team'],
		['ThesPorts', 'theo', 'Programmer Of Theo Engine',	 'https://youtube.com/c/TheoDeveloper', 0x191970],
		['EstoyAburridow', 'aburridow', 'Code Helper', 'https://twitter.com/EstoyAburridop', 0x1E90FF],
		['ElArabe98', 'arabe', 'Logo Bumpin Creator', 'https://www.youtube.com/channel/UCi_xw_cLbN_T6xoFYqKlAeA',0x696969 ],
		["Funkin Crew"],
		['NinjaMuffin99', 'muffin', "Programmer Of Friday Night Funkin'", 'https://twitter.com/ninja_muffin99',	0xFFF73838],
		['PhantomArcade', 'phantom', "Animator Of Friday Night Funkin'", 'https://twitter.com/PhantomArcade3K',	0xFFFFBB1B],
